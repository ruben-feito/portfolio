---
type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<header class="mb-12 text-center md:mb-16">
  <h1 class="text-foreground mb-4 text-3xl font-bold md:text-4xl lg:text-5xl">
    {title}
  </h1>
  <p class="text-muted mx-auto max-w-3xl text-base md:text-xl">
    {description}
  </p>
</header>
