          <!-- Mobile menu button -->
          <button
            class="md:hidden text-gray-700 dark:text-muted hover:text-teal-600 dark:hover:text-teal-400 transition-colors duration-300 ease-in-out"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
