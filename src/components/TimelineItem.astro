---
type Props = {
  year: string;
  title: string;
  company: string;
  period: string;
  description: string;
  skills?: { title: string; items: string[] }[];
  colorClass?: string;
};

const {
  year,
  title,
  company,
  period,
  description,
  skills = [],
  colorClass = "bg-teal-500",
} = Astro.props;
---

<div class="relative flex items-start gap-3 md:gap-6">
  <div
    class:list={[
      "flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full text-xs font-bold text-white shadow-lg md:h-16 md:w-16 md:text-lg",
      colorClass,
    ]}
  >
    {year}
  </div>
  <div
    class="bg-background border-border flex-1 rounded-2xl border p-4 shadow-xl transition-colors duration-300 md:p-8 dark:bg-slate-800"
  >
    <div class="mb-4 flex flex-col md:flex-row md:items-start md:justify-between">
      <div>
        <h3 class="text-foreground text-xl font-semibold">
          {title}
        </h3>
        <p class="text-teal-600 dark:text-teal-400">
          {company}
        </p>
      </div>
      <p class="text-muted text-sm">
        {period}
      </p>
    </div>
    <p class="text-muted mb-4 leading-relaxed">
      {description}
    </p>
    {
      skills.length > 0 && (
        <div class="grid gap-4 md:grid-cols-2">
          {skills.map((skillGroup) => (
            <div>
              <h4 class="text-foreground mb-2 font-semibold">{skillGroup.title}</h4>
              <ul class="text-muted space-y-1 text-sm">
                {skillGroup.items.map((item) => (
                  <li>âœ¦ {item}</li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      )
    }
  </div>
</div>
