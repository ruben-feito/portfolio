---
import TechBadge from "./TechBadge.astro";
import type { Project } from "../data/projects";

export interface Props extends Project {}

const { title, description, gradient, tags } = Astro.props;
---

<article
  class="bg-background dark:bg-slate-800 rounded-xl shadow-lg overflow-hidden border border-border transition-colors duration-300 hover:shadow-xl flex flex-col"
>
  <div class:list={["h-48 bg-gradient-to-br", gradient]}></div>
  <div class="p-6 flex-1 flex flex-col">
    <h3 class="text-xl font-bold text-foreground mb-2">
      {title}
    </h3>
    <p class="text-muted text-sm mb-3">
      {description}
    </p>
    <div class="flex gap-2 flex-wrap mt-auto min-h-12 items-start">
      {
        tags.map((tag) => (
          <TechBadge label={tag.label} color={tag.color as any} />
        ))
      }
    </div>
  </div>
</article>
