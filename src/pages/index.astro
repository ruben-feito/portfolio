---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import Hero from "../components/Hero.astro";
import Button from "../components/Button.astro";
import { featuredSkills } from "../data/skills";
import { stats } from "../data/stats";
---

<Layout>
  <Hero
    name="Rubén Feito"
    description="Desarrollador Full-Stack Senior especializado en Backend con Laravel. Experto en integraciones complejas de marketplaces nacionales y europeos."
    ctaPrimary={{ text: "Ver Proyectos", href: "/projects" }}
    ctaSecondary={{
      text: "Contactar",
      href: "https://www.linkedin.com/in/rubenfeitof/",
    }}
  />

  <!-- Featured Skills -->
  <section
    class="py-16 bg-secondary dark:bg-slate-800 transition-colors duration-300"
  >
    <Container>
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
          Especialidades Técnicas
        </h2>
        <p class="text-lg text-muted max-w-2xl mx-auto">
          Enfoque principal en backend robusto y escalable
        </p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          featuredSkills.map((skill) => (
            <div class="bg-background dark:bg-slate-800 p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 border border-border text-center">
              <div class="flex items-center justify-center mb-4">
                <svg
                  class="w-12 h-12 text-teal-500/80"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  {skill.icon === "upload" && (
                    <>
                      <path
                        d="M4 17v2a2 2 0 002 2h12a2 2 0 002-2v-2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <polyline
                        points="7 9 12 4 17 9"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <line
                        x1="12"
                        y1="4"
                        x2="12"
                        y2="16"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </>
                  )}
                  {skill.icon === "desktop" && (
                    <>
                      <rect
                        x="2"
                        y="3"
                        width="20"
                        height="14"
                        rx="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <line
                        x1="8"
                        y1="21"
                        x2="16"
                        y2="21"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <line
                        x1="12"
                        y1="17"
                        x2="12"
                        y2="21"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </>
                  )}
                  {skill.icon === "network" && (
                    <>
                      <circle
                        cx="18"
                        cy="5"
                        r="3"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <circle
                        cx="6"
                        cy="12"
                        r="3"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <circle
                        cx="18"
                        cy="19"
                        r="3"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <line
                        x1="8.59"
                        y1="13.51"
                        x2="15.42"
                        y2="17.49"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <line
                        x1="15.41"
                        y1="6.51"
                        x2="8.59"
                        y2="10.49"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </>
                  )}
                  {skill.icon === "check" && (
                    <>
                      <path
                        d="M9 11l3 3L22 4"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <path
                        d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </>
                  )}
                  {skill.icon === "database" && (
                    <>
                      <ellipse
                        cx="12"
                        cy="5"
                        rx="9"
                        ry="3"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <path
                        d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <path
                        d="M3 12c0 1.66 4 3 9 3s9-1.34 9-3"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </>
                  )}
                  {skill.icon === "layers" && (
                    <>
                      <polygon
                        points="12 2 2 7 12 12 22 7 12 2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <polyline
                        points="2 17 12 22 22 17"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <polyline
                        points="2 12 12 17 22 12"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </>
                  )}
                </svg>
              </div>
              <h3 class="text-xl font-bold text-foreground mb-3 font-mono">
                {skill.title}
              </h3>
              <p class="text-muted">{skill.description}</p>
            </div>
          ))
        }
      </div>
    </Container>
  </section>

  <!-- Stats & CTA Section -->
  <section class="py-12 bg-gradient-to-r from-teal-500 to-teal-700 text-white">
    <Container>
      <!-- Stats Grid -->
      <div class="grid md:grid-cols-3 gap-8 mb-12 max-w-3xl mx-auto">
        {
          stats.map((stat) => (
            <div class="text-center">
              <div class="text-4xl md:text-5xl font-bold mb-2">
                {stat.value}
              </div>
              <p class="text-teal-100">{stat.label}</p>
            </div>
          ))
        }
      </div>

      <!-- CTA -->
      <div class="text-center border-t border-teal-500 pt-8">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          ¿Buscas un desarrollador Full-Stack experimentado?
        </h2>
        <p class="text-xl mb-8 text-teal-100">
          Especializado en Laravel y integraciones de marketplaces
        </p>
        <Button
          variant="light-on-dark"
          href="https://www.linkedin.com/in/rubenfeitof/"
          target="_blank"
        >
          Hablemos de tu proyecto
        </Button>
      </div>
    </Container>
  </section>
</Layout>
