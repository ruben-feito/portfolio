---
import { ClientRouter } from "astro:transitions";
import ThemeToggle from "../components/ThemeToggle.astro";
import SEO from "../components/SEO.astro";
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "Portfolio - Desarrollador Full-Stack Senior | Laravel & Marketplaces",
  description = "Desarrollador Full-Stack Senior especializado en Backend con Laravel, integraciones de marketplaces y arquitecturas escalables. Más de 5 años de experiencia.",
  image = "/og-image.jpg",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="desarrollador, full-stack, Laravel, backend, PHP, marketplaces, e-commerce, integraciones API, arquitectura escalable"
    />
    <meta name="author" content="Rubén Feito" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="Spanish" />
    <meta name="revisit-after" content="7 days" />

    <!-- SEO Component -->
    <SEO
      title={title}
      description={description}
      image={image}
      url={Astro.url.href}
    />

    <!-- Favicon -->
    <link
      rel="icon"
      type="image/svg+xml"
      href="https://avatars.githubusercontent.com/u/59911220?v=4"
    />
    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.json" />

    <!-- Importar fuentes técnicas -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&family=Roboto+Mono:wght@400;500;700&display=swap"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&family=Roboto+Mono:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Rubén Feito",
        "jobTitle": "Desarrollador Full-Stack Senior",
        "description": "Desarrollador Full-Stack Senior especializado en Backend con Laravel y integraciones de marketplaces",
        "url": "{Astro.url.origin}",
        "sameAs": [
          "https://www.linkedin.com/in/rubenfeitof/",
          "https://github.com/ruben-feito"
        ],
        "knowsAbout": [
          "Laravel",
          "PHP",
          "Backend Development",
          "API Integrations",
          "Marketplace Integrations",
          "E-commerce",
          "MySQL",
          "PostgreSQL",
          "Redis",
          "Docker"
        ],
        "hasOccupation": {
          "@type": "Occupation",
          "name": "Desarrollador Full-Stack",
          "occupationLocation": {
            "@type": "Country",
            "name": "Spain"
          }
        }
      }
    </script>
    <!-- SPA navigation + transition -->
    <ClientRouter />

    <!-- Script para prevenir FOUC - Simplificado según mejores prácticas Astro -->
    <script is:inline>
      (function () {
        // Función para obtener el tema actual
        const getTheme = () => {
          const stored = localStorage.getItem("theme");
          if (stored) return stored === "dark";
          return window.matchMedia("(prefers-color-scheme: dark)").matches;
        };

        // Función para aplicar tema
        const applyTheme = (isDark) => {
          if (isDark) {
            document.documentElement.classList.add("dark");
          } else {
            document.documentElement.classList.remove("dark");
          }
        };

        // Aplicar tema inicial inmediatamente
        applyTheme(getTheme());

        // Listener para navegación SPA
        document.addEventListener("astro:after-swap", () => {
          applyTheme(getTheme());
        });
      })();
    </script>

    <style is:inline>
      /* Prevenir flash durante carga inicial */
      html:not(.dark):not(:has(.dark)) {
        visibility: visible;
      }
    </style>
  </head>
  <body class="min-h-screen bg-background text-foreground leading-relaxed">
    <header
      class="bg-background/95 backdrop-blur-sm shadow-lg sticky top-0 z-50 border-b border-border"
    >
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <span class="text-2xl font-bold text-foreground"> Rubén Feito </span>
          <ul class="hidden md:flex space-x-8">
            <li>
              <a
                href="/"
                class="text-gray-700 dark:text-muted hover:text-teal-600 dark:hover:text-teal-400 font-medium transition-colors duration-300 ease-in-out"
                >Inicio</a
