---
import { ClientRouter } from "astro:transitions";
import ThemeToggle from "../components/ThemeToggle.astro";
import SEO from "../components/SEO.astro";
import "../styles/global.css";

type Props = {
  title?: string;
  description?: string;
  image?: string;
};

const {
  title = "Portfolio - Desarrollador Full-Stack Senior | Laravel & Marketplaces",
  description = "Desarrollador Full-Stack Senior especializado en Backend con Laravel, integraciones de marketplaces y arquitecturas escalables. Más de 5 años de experiencia.",
  image = "/og-image.jpg",
} = Astro.props;

const currentPath = Astro.url.pathname;
const isActive = (href: string) =>
  href === "/" ? currentPath === "/" || currentPath === "" : currentPath.startsWith(href);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="keywords"
      content="desarrollador, full-stack, Laravel, backend, PHP, marketplaces, e-commerce, integraciones API, arquitectura escalable"
    />
    <meta name="author" content="Rubén Feito" />
    <meta name="robots" content="index, follow" />
    <meta id="theme-color-meta" name="theme-color" content="#14b8a6" />

    <!-- SEO Component -->
    <SEO title={title} description={description} image={image} url={Astro.url.href} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />
    <link rel="manifest" href="/manifest.json" />

    <!-- Importar fuentes técnicas -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Carga de fuentes no bloqueante (async font loading pattern) -->
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&family=Roboto+Mono:wght@400;500;700&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&family=Roboto+Mono:wght@400;500;700&display=swap"
        rel="stylesheet"
      />
    </noscript>

    <!-- Structured Data -->
    <script is:inline type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Rubén Feito",
        "jobTitle": "Desarrollador Full-Stack Senior",
        "description": "Desarrollador Full-Stack Senior especializado en Backend con Laravel y integraciones de marketplaces",
        "url": "https://ruben-feito.vercel.app",
        "sameAs": ["https://www.linkedin.com/in/rubenfeitof/", "https://github.com/ruben-feito"],
        "knowsAbout": [
          "Laravel",
          "PHP",
          "Backend Development",
          "API Integrations",
          "Marketplace Integrations",
          "E-commerce",
          "MySQL",
          "PostgreSQL",
          "Redis",
          "Docker"
        ],
        "hasOccupation": {
          "@type": "Occupation",
          "name": "Desarrollador Full-Stack",
          "occupationLocation": {
            "@type": "Country",
            "name": "Spain"
          }
        }
      }
    </script>
    <!-- SPA navigation + transition -->
    <ClientRouter />

    <!-- Script para prevenir FOUC - Simplificado según mejores prácticas Astro -->
    <script is:inline>
      (function () {
        // Función para obtener el tema actual
        const getTheme = () => {
          const stored = localStorage.getItem("theme");
          if (stored) return stored === "dark";
          return window.matchMedia("(prefers-color-scheme: dark)").matches;
        };

        // Función para aplicar tema
        const applyTheme = (isDark) => {
          if (isDark) {
            document.documentElement.classList.add("dark");
          } else {
            document.documentElement.classList.remove("dark");
          }
          // Sincronizar theme-color con el tema real (no solo la preferencia del SO)
          const meta = document.getElementById("theme-color-meta");
          if (meta) meta.setAttribute("content", isDark ? "#0f172a" : "#14b8a6");
        };

        // Aplicar tema inicial inmediatamente
        applyTheme(getTheme());

        // Listener para navegación SPA
        document.addEventListener("astro:after-swap", () => {
          applyTheme(getTheme());
        });
      })();
    </script>

    <style is:inline>
      /* Prevenir flash durante carga inicial */
      html:not(.dark):not(:has(.dark)) {
        visibility: visible;
      }
    </style>
  </head>
  <body class="bg-background text-foreground min-h-screen leading-relaxed">
    <header
      class="bg-background/95 border-border sticky top-0 z-50 border-b shadow-lg backdrop-blur-sm"
    >
      <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between py-4">
          <span class="text-foreground text-2xl font-bold"> Rubén Feito </span>
          <ul class="hidden space-x-8 md:flex">
            <li>
              <a
                href="/"
                class:list={[
                  "font-medium transition-colors duration-300 ease-in-out",
                  isActive("/")
                    ? "text-teal-600 dark:text-teal-400"
                    : "dark:text-muted text-gray-700 hover:text-teal-600 dark:hover:text-teal-400",
                ]}>Inicio</a
              >
            </li>
            <li>
              <a
                href="/about"
                class:list={[
                  "font-medium transition-colors duration-300 ease-in-out",
                  isActive("/about")
                    ? "text-teal-600 dark:text-teal-400"
                    : "dark:text-muted text-gray-700 hover:text-teal-600 dark:hover:text-teal-400",
                ]}>Sobre mí</a
              >
            </li>
            <li>
              <a
                href="/stack"
                class:list={[
                  "font-medium transition-colors duration-300 ease-in-out",
                  isActive("/stack")
                    ? "text-teal-600 dark:text-teal-400"
                    : "dark:text-muted text-gray-700 hover:text-teal-600 dark:hover:text-teal-400",
                ]}>Stack</a
              >
            </li>
            <li>
              <a
                href="/marketplaces"
                class:list={[
                  "font-medium transition-colors duration-300 ease-in-out",
                  isActive("/marketplaces")
                    ? "text-teal-600 dark:text-teal-400"
                    : "dark:text-muted text-gray-700 hover:text-teal-600 dark:hover:text-teal-400",
                ]}>Marketplaces</a
              >
            </li>
            <li>
              <a
                href="/projects"
                class:list={[
                  "font-medium transition-colors duration-300 ease-in-out",
                  isActive("/projects")
                    ? "text-teal-600 dark:text-teal-400"
                    : "dark:text-muted text-gray-700 hover:text-teal-600 dark:hover:text-teal-400",
                ]}>Proyectos</a
              >
            </li>
          </ul>
          <div class="flex items-center gap-3 md:gap-0">
            <!-- Mobile menu button -->
            <button
              id="mobile-menu-btn"
              aria-label="Abrir menú"
              aria-expanded="false"
              aria-controls="mobile-menu"
              class="dark:text-muted text-gray-700 transition-colors duration-300 ease-in-out hover:text-teal-600 md:hidden dark:hover:text-teal-400"
            >
              <!-- Hamburger icon -->
              <svg
                id="icon-open"
                class="h-6 w-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
              <!-- Close icon -->
              <svg
                id="icon-close"
                class="hidden h-6 w-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>

            <ThemeToggle />
          </div>
        </div>

        <!-- Mobile menu panel -->
        <div
          id="mobile-menu"
          class="bg-background/95 border-border absolute top-full right-0 left-0 z-40 hidden border-b shadow-lg backdrop-blur-sm md:hidden"
        >
          <ul class="space-y-1 py-3">
            <li>
              <a
                href="/"
                class:list={[
                  "hover:bg-accent block px-4 py-2 font-medium transition-colors duration-200",
                  isActive("/")
                    ? "text-teal-600 dark:text-teal-400"
                    : "dark:text-muted text-gray-700 hover:text-teal-600 dark:hover:text-teal-400",
                ]}>Inicio</a
              >
            </li>
            <li>
              <a
                href="/about"
                class:list={[
                  "hover:bg-accent block px-4 py-2 font-medium transition-colors duration-200",
                  isActive("/about")
                    ? "text-teal-600 dark:text-teal-400"
                    : "dark:text-muted text-gray-700 hover:text-teal-600 dark:hover:text-teal-400",
                ]}>Sobre mí</a
              >
            </li>
            <li>
              <a
                href="/stack"
                class:list={[
                  "hover:bg-accent block px-4 py-2 font-medium transition-colors duration-200",
                  isActive("/stack")
                    ? "text-teal-600 dark:text-teal-400"
                    : "dark:text-muted text-gray-700 hover:text-teal-600 dark:hover:text-teal-400",
                ]}>Stack</a
              >
            </li>
            <li>
              <a
                href="/marketplaces"
                class:list={[
                  "hover:bg-accent block px-4 py-2 font-medium transition-colors duration-200",
                  isActive("/marketplaces")
                    ? "text-teal-600 dark:text-teal-400"
                    : "dark:text-muted text-gray-700 hover:text-teal-600 dark:hover:text-teal-400",
                ]}>Marketplaces</a
              >
            </li>
            <li>
              <a
                href="/projects"
                class:list={[
                  "hover:bg-accent block px-4 py-2 font-medium transition-colors duration-200",
                  isActive("/projects")
                    ? "text-teal-600 dark:text-teal-400"
                    : "dark:text-muted text-gray-700 hover:text-teal-600 dark:hover:text-teal-400",
                ]}>Proyectos</a
              >
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <script is:inline>
      function initMobileMenu() {
        var btn = document.getElementById("mobile-menu-btn");
        var menu = document.getElementById("mobile-menu");
        var iconOpen = document.getElementById("icon-open");
        var iconClose = document.getElementById("icon-close");

        if (!btn || !menu || !iconOpen || !iconClose) return;
        if (btn.dataset.initialized) return;
        btn.dataset.initialized = "true";

        function openMenu() {
          menu.classList.remove("hidden");
          iconOpen.classList.add("hidden");
          iconClose.classList.remove("hidden");
          btn.setAttribute("aria-expanded", "true");
        }

        function closeMenu() {
          menu.classList.add("hidden");
          iconOpen.classList.remove("hidden");
          iconClose.classList.add("hidden");
          btn.setAttribute("aria-expanded", "false");
        }

        btn.addEventListener("click", function (e) {
          e.stopPropagation();
          var isOpen = btn.getAttribute("aria-expanded") === "true";
          isOpen ? closeMenu() : openMenu();
        });

        menu.querySelectorAll("a").forEach(function (link) {
          link.addEventListener("click", closeMenu);
        });

        document.addEventListener("click", function () {
          if (!menu.classList.contains("hidden")) {
            closeMenu();
          }
        });
      }

      document.addEventListener("astro:page-load", initMobileMenu);
    </script>

    <main class="flex-1">
      <slot />
    </main>
    <footer class="bg-slate-900 py-12 text-white transition-colors duration-300 dark:bg-slate-800">
