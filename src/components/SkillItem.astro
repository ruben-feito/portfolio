---
export interface Props {
  title: string;
  borderColor: string;
  description: string;
}

const { title, borderColor, description } = Astro.props;
---

<div class:list={["border-l-4 pl-4", borderColor]}>
  <h3 class="text-lg font-semibold text-foreground mb-2">
    {title}
  </h3>
  <p class="text-muted">
    {description}
  </p>
</div>
